{
  "include": [
    "src"
  ],
  "exclude": [
    "src/__test__/**/*",
    "**/*.test.*"
  ],

  "compilerOptions": {
    "outDir": "dist",
    // https://stackoverflow.com/a/68188788/20308611
    "target": "ES6",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true, // for editor support
  }
}
